<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GreenHand.Client.Windows.Views"
             xmlns:Custom="http://metro.mahapps.com/winfx/xaml/controls" x:Class="GreenHand.Client.Windows.Views.LoginView"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200" Background="#FF2F2F2F">
    <StackPanel VerticalAlignment="Center" >
        <Image  Width="600" Height="300" Source="/GreenHandInsights;component/Images/GreenHandLogo Rectangle.png"/>
        <TextBox Custom:TextBoxHelper.AutoWatermark="True" Custom:TextBoxHelper.Watermark="Username" Width="600"/>
        <TextBox Custom:TextBoxHelper.AutoWatermark="True" Custom:TextBoxHelper.Watermark="Password" Width="600" Margin="0,0,0,0"/>
        <Button Content="Login" Width="600" Margin="0,20,0,50"/>
    </StackPanel>
</UserControl>

